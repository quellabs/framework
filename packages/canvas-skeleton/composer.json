{
  "name": "quellabs/canvas-skeleton",
  "description": "Application skeleton for Quellabs Canvas framework",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "quellabs/canvas": "^1.0",
    "quellabs/canvas-smarty": "^1.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "App\\Installer::setup"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
